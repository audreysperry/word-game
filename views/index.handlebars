<h2>Welcome to Mystery Word Game</h2>


{{word}}
{{#unless userName}}
<form class="" action="/userName" method="post">
  <input type="text" name="userName" value="">
  <input type="submit" value="Enter Name">
</form>
 {{else}}

 <h2>Welcome {{userName}}</h2>

 {{/unless}}

<span>You have {{remaining}} guesses left</span>

{{#each errors}}
<div style="color: red;">
  {{msg}}
</div>
{{error}}
{{/each}}

<div>{{error}}</div>
<form class="" action="/guesses" method="post">
  <input type="text" name="guess" value="" placeholder="Guess a letter">
  <input type="submit" value="Make Guess">
</form>




<p>{{blanks}}</p>

<p>Guessed letters</p>
<p>{{guesses}}</p>
